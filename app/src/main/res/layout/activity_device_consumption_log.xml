<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omar_hidrogo_local.micasa.Device_consumption_log">

    <LinearLayout
        android:id="@+id/lltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorblue"
                android:text="@string/tvdeviceconsumptionlog"
                android:textSize="20dp"
                />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lllog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/lltitle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgconsumptiondevice"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvdeviceconsumptionsearch"/>

            <Spinner
                android:id="@+id/spinnerdevice"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="19dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnInfConsumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/button_white"
                android:layout_marginTop="80dp"
                android:text="@string/btnsearchdevice"
                android:textAllCaps="false"
                android:textColor="@color/colorgreen1"
                android:layout_below="@+id/btnInf"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/tvdevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgconsumptiondevice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textColor="@color/colorred"
                />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llogs"
        android:layout_below="@+id/lllog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvlogdevice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="logs..."
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>